<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/suma"
        android:layout_width="134dp"
        android:layout_height="51dp"
        android:layout_marginBottom="444dp"
        android:backgroundTint="@color/Brown400"
        android:text="@string/botonSuma"
        android:textColorLink="@color/azul100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/resta"
        android:layout_width="138dp"
        android:layout_height="51dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="@color/Brown400"
        android:text="@string/botonResta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/suma"
        app:layout_constraintVertical_bias="0.022" />

    <Button
        android:id="@+id/multip"
        android:layout_width="141dp"
        android:layout_height="52dp"
        android:backgroundTint="@color/Brown400"
        android:text="@string/botonMultip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resta"
        app:layout_constraintVertical_bias="0.035" />

    <Button
        android:id="@+id/division"
        android:layout_width="133dp"
        android:layout_height="48dp"
        android:backgroundTint="@color/Brown400"
        android:text="@string/botonDivis"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/multip"
        app:layout_constraintVertical_bias="0.036" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="280dp"
        android:layout_height="82dp"
        android:background="@color/azul100"
        android:backgroundTint="@color/azul100"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:gravity="center"
        android:text="@string/txt_resultado"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/division"
        app:layout_constraintVertical_bias="0.367" />

    <EditText
        android:id="@+id/valor1"
        android:layout_width="209dp"
        android:layout_height="54dp"
        android:layout_marginTop="80dp"
        android:background="@color/white"
        android:backgroundTint="@color/azul100"
        android:ems="10"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:gravity="center"
        android:inputType="number"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/suma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.509"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/valor2"
        android:layout_width="211dp"
        android:layout_height="48dp"
        android:background="@color/white"
        android:backgroundTint="@color/azul100"
        android:ems="10"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:gravity="center"
        android:inputType="number"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/suma"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/valor1"
        app:layout_constraintVertical_bias="0.854" />

</androidx.constraintlayout.widget.ConstraintLayout>